# Colors
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias tree='tree -C'

# Listing
alias l='ls -lh'
alias ll='ls -lh'
alias lll='ls -lha'
alias la='ls -lhd'
alias lt='ls -lht'

# Ask confirmation
alias rm='rm -i'

# Network
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip_osx='ipconfig getifaddr en0'
alias localip_ubuntu='ifconfig eth0 | grep "inet addr" | cut -d: -f2 | awk "{print $1}"'

# Allow keyboard navigation in OCaml Toplevel
alias ocaml='rlwrap -pMagenta ocaml'

# Editor
alias nedit='emacsclient -n'
alias cedit='emacsclient -c -n'
alias start_emacs='emacs --daemon'
alias stop_emacs='emacsclient -e "(kill-emacs)"'
