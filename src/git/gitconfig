[include]
	# Load private user info
	path = ~/config/_build/gitconfig.private
[color "grep"]
	# Enable colors for grep
	linenumber = yellow
	match = red
[color "branch"]
	# Blue on black is hard to read in git branch -vv: use cyan instead
	upstream = cyan
[alias]
	st = status
	stu = status --untracked-files=no
	ci = commit
	co = checkout
	lg = log --graph
	ll = log -20 --graph
	cdiff = diff --color-words=.
	cshow = show --color-words=.
	oops = commit --amend --no-edit
	subdate = submodule update --init --recursive --remote
	sync = fetch origin --prune --force 'refs/pull-requests/*:refs/pr/*'
	spull = pull --recurse-submodules
	supdate = submodule update --init --recursive
	sclean = clean -ffdx --recurse-submodules
	sforeach = submodule foreach --recursive
[format]
	# Format used for the log
	pretty = %Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr, %cd) %C(bold blue)<%an>%Creset
[core]
	editor = emacs
	excludesfile = ~/.gitignore
[diff]
	# When using --word-diff, assume --word-diff-regex=.
	wordRegex = .
	algorithm = histogram
	colorMoved = dimmed-zebra
[rerere]
	autoupdate = true
	enabled = true
[pull]
	# This is GREAT... when you know what you're doing and are careful
	# not to pull --no-rebase over a local line containing a true merge.
	rebase = true
[log]
	# Use abbrev SHAs whenever possible/relevant instead of full 40 chars
	abbrevCommit = true
	# Automatically --follow when given a single path
	follow = true
[blame]
	# Use short dates
	date = short
[tag]
	# Sort tags as version numbers whenever applicable,
	# so 1.10.2 is AFTER 1.2.0.
	sort = version:refname
[merge]
	conflictStyle = diff3
[mergetool]
	# Clean up backup files created by merge tools on tool exit
	keepBackup = false
[mergetool "ediff"]
	cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[init]
	defaultBranch = main
